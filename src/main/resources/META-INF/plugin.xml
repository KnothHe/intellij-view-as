<idea-plugin>
    <id>com.github.knothhe.intellijviewas</id>
    <name>intellij-view-as</name>
    <vendor>knothhe</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.knothhe.intellijviewas.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.knothhe.intellijviewas.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.knothhe.intellijviewas.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
